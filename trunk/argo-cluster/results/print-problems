#!/bin/bash

# locate files
#echo phase0

domain=$1
if [ "$domain" == "ctp" -o "$domain" == "ctp2" ]; then
    problems=`grep -h $domain raw/*/output.* | awk '{ print $7 }' | sort | uniq`
elif [ "$domain" == "ctp3" ]; then
    problems=`grep -h $domain raw/*/output.* | awk '{ print $9 }' | sort | uniq`
elif [ "$domain" == "sailing" ]; then
    problems=`grep -h $domain raw/*/output.* | awk '{ print $11 }' | sort | uniq`
else
    problems=`grep -h $domain raw/*/output.* | awk '{ print $9 }' | sort | uniq`
fi

if [ "$problems" == "" ]; then
    echo No files available
    exit 0
fi

for p in $problems; do
    echo `basename $p .track`
done

